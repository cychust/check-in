/* pages/list/index.wxss */
/**index.wxss**/
@import '../../style/common.wxss';
.container{
	background-color: #f5f5f5;
}
.main{
	display: flex;
	flex-direction: column;
	align-items: center;
	height: 100%;
	padding: 10rpx,20rpx;
}
.create-new-check-in{
	margin: 30rpx 40rpx;
	border-radius: 20rpx;
	width: 95vw;
	height: 219rpx;
	display: block;
	box-shadow: 0px 5px 0px 0px #1296db;
	z-index: 100rpx;
}
.create-new-check-in image{
	width: 100%;
	height: 100%;
}

.share{
	width: 90%;
	margin-left: 10rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
}
.row{
	background-color: #dbdbdb;
	height: 100rpx;
}

.col{
	color: #fff;
}


.van-popup{
	width: 100vw;
	height: 100vh;
	z-index: 200rpx;
	background-color: #000000;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding-left: 10rpx;
	padding-right: 10rpx;
}
.title-field{
	width: 100%;
}
.van-button{
	width: 100vw;
	margin:  100rpx;
}